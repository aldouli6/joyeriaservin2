<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field name="search" type="text" hint="COM_SERVIN2_SEARCH_FILTER_SUBMIT"
               label="COM_USERS_FILTER_SEARCH_DESC"
               class="js-stools-search-string" />

        <field name="state"
               type="status"
               label="COM_SERVIN2_FILTER_STATE"
               description="COM_SERVIN2_FILTER_STATE_DESC"
               onchange="this.form.submit();"
        >
            <option value="">JOPTION_SELECT_PUBLISHED</option>
        </field>

        <field name="proveedor" type="sql" label="COM_SERVIN2_FORM_LBL_DEUDA_PROVEEDOR" query="SELECT '' AS `id`, 'COM_SERVIN2_DEUDAS_PROVEEDOR_FILTER' AS `val` UNION SELECT `id` AS `id`,  CONCAT(`empresa`, ' ', `nombre`) AS val FROM `#__servin_proveedores2` WHERE state != -2" key_field="id" value_field="val" class="inputbox" onchange="this.form.submit()" translate="true"/>
<field name="fecha_compra.from" label="COM_SERVIN2_DEUDAS_FECHA_COMPRA_FILTER_FROM" type="calendar" onchange="this.form.submit();" filter="safehtml" class="inputbox" showtime="false" translateformat="false" hint="COM_SERVIN2_DEUDAS_FECHA_COMPRA_FILTER_FROM"/>
<field name="fecha_compra.to" label="COM_SERVIN2_DEUDAS_FECHA_COMPRA_FILTER_TO" type="calendar" onchange="this.form.submit();" filter="safehtml" class="inputbox" showtime="false" translateformat="false" hint="COM_SERVIN2_DEUDAS_FECHA_COMPRA_FILTER_TO"/>
<field name="fecha_limite.from" label="COM_SERVIN2_DEUDAS_FECHA_LIMITE_FILTER_FROM" type="calendar" onchange="this.form.submit();" filter="safehtml" class="inputbox" showtime="false" translateformat="false" hint="COM_SERVIN2_DEUDAS_FECHA_LIMITE_FILTER_FROM"/>
<field name="fecha_limite.to" label="COM_SERVIN2_DEUDAS_FECHA_LIMITE_FILTER_TO" type="calendar" onchange="this.form.submit();" filter="safehtml" class="inputbox" showtime="false" translateformat="false" hint="COM_SERVIN2_DEUDAS_FECHA_LIMITE_FILTER_TO"/>


    </fields>

    <fields name="list">

        <field name="fullordering"
               type="list"
               label="COM_CONTENT_LIST_FULL_ORDERING"
               description="COM_CONTENT_LIST_FULL_ORDERING_DESC"
               onchange="this.form.submit();"
               default="a.id DESC"
        >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="a.`id` ASC">ID Ascending</option><option value="a.`id` DESC">ID Descending</option><option value="a.`ordering` ASC">Order Ascending</option><option value="a.`ordering` DESC">Order Descending</option><option value="a.`state` ASC">State Ascending</option><option value="a.`state` DESC">State Descending</option><option value="a.`proveedor` ASC">Proveedores Ascending</option><option value="a.`proveedor` DESC">Proveedores Descending</option><option value="a.`fecha_compra` ASC">Fechas de Compra Ascending</option><option value="a.`fecha_compra` DESC">Fechas de Compra Descending</option><option value="a.`fecha_limite` ASC">Fechas  Limite de pago Ascending</option><option value="a.`fecha_limite` DESC">Fechas  Limite de pago Descending</option><option value="a.`total` ASC">Totals Ascending</option><option value="a.`total` DESC">Totals Descending</option><option value="a.`abono` ASC">Abonos Ascending</option><option value="a.`abono` DESC">Abonos Descending</option><option value="a.`saldo` ASC">Saldos Ascending</option><option value="a.`saldo` DESC">Saldos Descending</option><option value="a.`resumen` ASC">Resumenes Ascending</option><option value="a.`resumen` DESC">Resumenes Descending</option><option value="a.`estatus` ASC">Estatuss Ascending</option><option value="a.`estatus` DESC">Estatuss Descending</option>

        </field>

        <field name="limit"
               type="limitbox"
               class="input-mini"
               default="25"
               onchange="this.form.submit();"
        />

    </fields>

</form>