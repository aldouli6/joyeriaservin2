<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field name="search" type="text" hint="COM_SERVIN2_SEARCH_FILTER_SUBMIT"
               label="COM_USERS_FILTER_SEARCH_DESC"
               class="js-stools-search-string" />

        <field name="state"
               type="status"
               label="COM_SERVIN2_FILTER_STATE"
               description="COM_SERVIN2_FILTER_STATE_DESC"
               onchange="this.form.submit();"
        >
            <option value="">JOPTION_SELECT_PUBLISHED</option>
        </field>

        <field name="tipo_transaccion" label="COM_SERVIN2_FORM_LBL_CONSIGNACION_TIPO_TRANSACCION" type="list" onchange="this.form.submit();" default="COM_SERVIN2_CONSIGNACIONES_TIPO_TRANSACCION_FILTER">
  <option value="">COM_SERVIN2_CONSIGNACIONES_TIPO_TRANSACCION_FILTER</option>
  <option value="0">COM_SERVIN2_CONSIGNACIONES_TIPO_TRANSACCION_OPTION_0</option>
  <option value="1">COM_SERVIN2_CONSIGNACIONES_TIPO_TRANSACCION_OPTION_1</option>
</field>
<field name="tipo" label="COM_SERVIN2_FORM_LBL_CONSIGNACION_TIPO" type="list" onchange="this.form.submit();" default="COM_SERVIN2_CONSIGNACIONES_TIPO_FILTER">
  <option value="">COM_SERVIN2_CONSIGNACIONES_TIPO_FILTER</option>
  <option value="0">COM_SERVIN2_CONSIGNACIONES_TIPO_OPTION_0</option>
  <option value="1">COM_SERVIN2_CONSIGNACIONES_TIPO_OPTION_1</option>
</field>
<field name="pieza" type="sql" label="COM_SERVIN2_FORM_LBL_CONSIGNACION_PIEZA" query="SELECT '' AS `id`, 'COM_SERVIN2_CONSIGNACIONES_PIEZA_FILTER' AS `val` UNION SELECT `id` AS `id`,  CONCAT(`descripcion`, ' ', `hechura`) AS val FROM `#__servin_piezas2` WHERE state != -2" key_field="id" value_field="val" class="inputbox" onchange="this.form.submit()" translate="true"/>
<field name="cliente" type="sql" label="COM_SERVIN2_FORM_LBL_CONSIGNACION_CLIENTE" query="SELECT '' AS `id`, 'COM_SERVIN2_CONSIGNACIONES_CLIENTE_FILTER' AS `val` UNION SELECT `id` AS `id`, `nombre` AS val FROM `#__servin_clientes2` WHERE state != -2" key_field="id" value_field="val" class="inputbox" onchange="this.form.submit()" translate="true"/>
<field name="proveedor" type="sql" label="COM_SERVIN2_FORM_LBL_CONSIGNACION_PROVEEDOR" query="SELECT '' AS `id`, 'COM_SERVIN2_CONSIGNACIONES_PROVEEDOR_FILTER' AS `val` UNION SELECT `id` AS `id`,  CONCAT(`empresa`, ' ', `nombre`) AS val FROM `#__servin_proveedores2` WHERE state != -2" key_field="id" value_field="val" class="inputbox" onchange="this.form.submit()" translate="true"/>
<field name="fecha_emision.from" label="COM_SERVIN2_CONSIGNACIONES_FECHA_EMISION_FILTER_FROM" type="calendar" onchange="this.form.submit();" filter="safehtml" class="inputbox" showtime="false" translateformat="false" hint="COM_SERVIN2_CONSIGNACIONES_FECHA_EMISION_FILTER_FROM"/>
<field name="fecha_emision.to" label="COM_SERVIN2_CONSIGNACIONES_FECHA_EMISION_FILTER_TO" type="calendar" onchange="this.form.submit();" filter="safehtml" class="inputbox" showtime="false" translateformat="false" hint="COM_SERVIN2_CONSIGNACIONES_FECHA_EMISION_FILTER_TO"/>
<field name="fecha_limite.from" label="COM_SERVIN2_CONSIGNACIONES_FECHA_LIMITE_FILTER_FROM" type="calendar" onchange="this.form.submit();" filter="safehtml" class="inputbox" showtime="false" translateformat="false" hint="COM_SERVIN2_CONSIGNACIONES_FECHA_LIMITE_FILTER_FROM"/>
<field name="fecha_limite.to" label="COM_SERVIN2_CONSIGNACIONES_FECHA_LIMITE_FILTER_TO" type="calendar" onchange="this.form.submit();" filter="safehtml" class="inputbox" showtime="false" translateformat="false" hint="COM_SERVIN2_CONSIGNACIONES_FECHA_LIMITE_FILTER_TO"/>
<field name="fecha_devolucion.from" label="COM_SERVIN2_CONSIGNACIONES_FECHA_DEVOLUCION_FILTER_FROM" type="calendar" onchange="this.form.submit();" filter="safehtml" class="inputbox" showtime="false" translateformat="false" hint="COM_SERVIN2_CONSIGNACIONES_FECHA_DEVOLUCION_FILTER_FROM"/>
<field name="fecha_devolucion.to" label="COM_SERVIN2_CONSIGNACIONES_FECHA_DEVOLUCION_FILTER_TO" type="calendar" onchange="this.form.submit();" filter="safehtml" class="inputbox" showtime="false" translateformat="false" hint="COM_SERVIN2_CONSIGNACIONES_FECHA_DEVOLUCION_FILTER_TO"/>


    </fields>

    <fields name="list">

        <field name="fullordering"
               type="list"
               label="COM_CONTENT_LIST_FULL_ORDERING"
               description="COM_CONTENT_LIST_FULL_ORDERING_DESC"
               onchange="this.form.submit();"
               default="a.id DESC"
        >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="a.`id` ASC">ID Ascending</option><option value="a.`id` DESC">ID Descending</option><option value="a.`ordering` ASC">Order Ascending</option><option value="a.`ordering` DESC">Order Descending</option><option value="a.`state` ASC">State Ascending</option><option value="a.`state` DESC">State Descending</option><option value="a.`no_folio_pagare` ASC">Número  Folio de  Pagare Ascending</option><option value="a.`no_folio_pagare` DESC">Número  Folio de  Pagare Descending</option><option value="a.`tipo_transaccion` ASC">Tipo de Transaccion Ascending</option><option value="a.`tipo_transaccion` DESC">Tipo de Transaccion Descending</option><option value="a.`tipo` ASC">Tipo Ascending</option><option value="a.`tipo` DESC">Tipo Descending</option><option value="a.`pieza` ASC">Piezas Ascending</option><option value="a.`pieza` DESC">Piezas Descending</option><option value="a.`piezas` ASC">Cantidad de piezas Ascending</option><option value="a.`piezas` DESC">Cantidad de piezas Descending</option><option value="a.`gramos` ASC">Peso en Gramos Ascending</option><option value="a.`gramos` DESC">Peso en Gramos Descending</option><option value="a.`cliente` ASC">Clientes Ascending</option><option value="a.`cliente` DESC">Clientes Descending</option><option value="a.`proveedor` ASC">Clientes Ascending</option><option value="a.`proveedor` DESC">Clientes Descending</option><option value="a.`total` ASC">Totals Ascending</option><option value="a.`total` DESC">Totals Descending</option><option value="a.`abono` ASC">Abonos Ascending</option><option value="a.`abono` DESC">Abonos Descending</option><option value="a.`adeudo` ASC">Adeudos Ascending</option><option value="a.`adeudo` DESC">Adeudos Descending</option><option value="a.`fecha_emision` ASC">Fecha Emisiones Ascending</option><option value="a.`fecha_emision` DESC">Fecha Emisiones Descending</option><option value="a.`fecha_limite` ASC">Fechas Limites Ascending</option><option value="a.`fecha_limite` DESC">Fechas Limites Descending</option><option value="a.`devolucion` ASC">Devolucions Ascending</option><option value="a.`devolucion` DESC">Devolucions Descending</option><option value="a.`fecha_devolucion` ASC">Fecha Devoluciones Ascending</option><option value="a.`fecha_devolucion` DESC">Fecha Devoluciones Descending</option>

        </field>

        <field name="limit"
               type="limitbox"
               class="input-mini"
               default="25"
               onchange="this.form.submit();"
        />

    </fields>

</form>