<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field name="search" type="text" hint="COM_SERVIN2_SEARCH_FILTER_SUBMIT"
               label="COM_USERS_FILTER_SEARCH_DESC"
               class="js-stools-search-string" />

        <field name="state"
               type="status"
               label="COM_SERVIN2_FILTER_STATE"
               description="COM_SERVIN2_FILTER_STATE_DESC"
               onchange="this.form.submit();"
        >
            <option value="">JOPTION_SELECT_PUBLISHED</option>
        </field>

        <field name="material" type="sql" label="COM_SERVIN2_FORM_LBL_PIEZA_MATERIAL" query="SELECT '' AS `id`, 'COM_SERVIN2_PIEZAS_MATERIAL_FILTER' AS `val` UNION SELECT `id` AS `id`, `nombre` AS val FROM `#__servin_materiales2` WHERE state != -2" key_field="id" value_field="val" class="inputbox" onchange="this.form.submit()" translate="true"/>
<field name="kilataje" type="sql" label="COM_SERVIN2_FORM_LBL_PIEZA_KILATAJE" query="SELECT '' AS `id`, 'COM_SERVIN2_PIEZAS_KILATAJE_FILTER' AS `val` UNION SELECT `id` AS `id`, `kilataje` AS val FROM `#__servin_kilatajes2` WHERE state != -2" key_field="id" value_field="val" class="inputbox" onchange="this.form.submit()" translate="true"/>
<field name="ubicacion" type="sql" label="COM_SERVIN2_FORM_LBL_PIEZA_UBICACION" query="SELECT '' AS `id`, 'COM_SERVIN2_PIEZAS_UBICACION_FILTER' AS `val` UNION SELECT `id` AS `id`, `nombre` AS val FROM `#__servin_ubicaciones2` WHERE state != -2" key_field="id" value_field="val" class="inputbox" onchange="this.form.submit()" translate="true"/>
<field name="hechura" type="sql" label="COM_SERVIN2_FORM_LBL_PIEZA_HECHURA" query="SELECT '' AS `id`, 'COM_SERVIN2_PIEZAS_HECHURA_FILTER' AS `val` UNION SELECT `id` AS `id`, `numero` AS val FROM `#__servin_hechuras2` WHERE state != -2" key_field="id" value_field="val" class="inputbox" onchange="this.form.submit()" translate="true"/>


    </fields>

    <fields name="list">

        <field name="fullordering"
               type="list"
               label="COM_CONTENT_LIST_FULL_ORDERING"
               description="COM_CONTENT_LIST_FULL_ORDERING_DESC"
               onchange="this.form.submit();"
               default="a.id DESC"
        >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="a.`id` ASC">ID Ascending</option><option value="a.`id` DESC">ID Descending</option><option value="a.`ordering` ASC">Order Ascending</option><option value="a.`ordering` DESC">Order Descending</option><option value="a.`state` ASC">State Ascending</option><option value="a.`state` DESC">State Descending</option><option value="a.`descripcion` ASC">Descripciones Ascending</option><option value="a.`descripcion` DESC">Descripciones Descending</option><option value="a.`material` ASC">Materiales Ascending</option><option value="a.`material` DESC">Materiales Descending</option><option value="a.`kilataje` ASC">Kilatajes Ascending</option><option value="a.`kilataje` DESC">Kilatajes Descending</option><option value="a.`ubicacion` ASC">Ubicaciones Ascending</option><option value="a.`ubicacion` DESC">Ubicaciones Descending</option><option value="a.`hechura` ASC">Hechuras Ascending</option><option value="a.`hechura` DESC">Hechuras Descending</option><option value="a.`tipo` ASC">Tipos Ascending</option><option value="a.`tipo` DESC">Tipos Descending</option><option value="a.`gramos` ASC">Gramos Ascending</option><option value="a.`gramos` DESC">Gramos Descending</option><option value="a.`cantidad` ASC">Cantidad Ascending</option><option value="a.`cantidad` DESC">Cantidad Descending</option><option value="a.`estatus` ASC">Estatus Ascending</option><option value="a.`estatus` DESC">Estatus Descending</option>

        </field>

        <field name="limit"
               type="limitbox"
               class="input-mini"
               default="25"
               onchange="this.form.submit();"
        />

    </fields>

</form>