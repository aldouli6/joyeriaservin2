<?xml version="1.0" encoding="utf-8"?>
<form>
  <fieldset>
    <field name="id" type="text" readonly="true" class="readonly" default="0" description="JGLOBAL_FIELD_ID_DESC"/>
    <field name="ordering"/>
    <field name="state" default="1" type="list" label="JSTATUS" description="JFIELD_PUBLISHED_DESC" class="inputbox" size="1">
      <option value="1">JPUBLISHED</option>
      <option value="0">JUNPUBLISHED</option>
      <option value="2">JARCHIVED</option>
      <option value="-2">JTRASHED</option>
    </field>
    <field name="checked_out" type="hidden" filter="unset"/>
    <field name="checked_out_time" default="0000-00-00 00:00:00" type="hidden" filter="unset"/>
    <field name="created_by" type="createdby" default="0" label="COM_SERVIN2_FORM_LBL_CONSIGNACION_CREATED_BY" description="COM_SERVIN2_FORM_DESC_CONSIGNACION_CREATED_BY" hidden="true" hint="COM_SERVIN2_FORM_LBL_CONSIGNACION_CREATED_BY"/>
    <field name="modified_by" type="modifiedby" default="0" label="COM_SERVIN2_FORM_LBL_CONSIGNACION_MODIFIED_BY" description="COM_SERVIN2_FORM_DESC_CONSIGNACION_MODIFIED_BY" hidden="true" hint="COM_SERVIN2_FORM_LBL_CONSIGNACION_MODIFIED_BY"/>
    <field name="created_at" type="timecreated" label="COM_SERVIN2_FORM_LBL_CONSIGNACION_CREATED_AT" description="COM_SERVIN2_FORM_DESC_CONSIGNACION_CREATED_AT" hidden="true" hint="COM_SERVIN2_FORM_LBL_CONSIGNACION_CREATED_AT"/>
    <field name="modified_at" type="timecreated" label="COM_SERVIN2_FORM_LBL_CONSIGNACION_MODIFIED_AT" description="COM_SERVIN2_FORM_DESC_CONSIGNACION_MODIFIED_AT" hidden="true" hint="COM_SERVIN2_FORM_LBL_CONSIGNACION_MODIFIED_AT"/>
    <field name="no_folio_pagare" filter="safehtml" type="text" required="true" label="COM_SERVIN2_FORM_LBL_CONSIGNACION_NO_FOLIO_PAGARE" description="COM_SERVIN2_FORM_DESC_CONSIGNACION_NO_FOLIO_PAGARE" hint="COM_SERVIN2_FORM_LBL_CONSIGNACION_NO_FOLIO_PAGARE"/>
    <field name="foto_pagare" type="FileMultiple" label="COM_SERVIN2_FORM_LBL_CONSIGNACION_FOTO_PAGARE" description="COM_SERVIN2_FORM_DESC_CONSIGNACION_FOTO_PAGARE" hint="COM_SERVIN2_FORM_LBL_CONSIGNACION_FOTO_PAGARE"/>
    <field name="tipo_transaccion" type="radio" required="true" label="COM_SERVIN2_FORM_LBL_CONSIGNACION_TIPO_TRANSACCION" class = "btn-group btn-group-yesno btn-group-reversed radio" description="COM_SERVIN2_FORM_DESC_CONSIGNACION_TIPO_TRANSACCION" hint="COM_SERVIN2_FORM_LBL_CONSIGNACION_TIPO_TRANSACCION">
      <option value="0">COM_SERVIN2_CONSIGNACIONES_TIPO_TRANSACCION_OPTION_0</option>
      <option value="1">COM_SERVIN2_CONSIGNACIONES_TIPO_TRANSACCION_OPTION_1</option>
    </field>
    <field name="compras"   class="inputbox" 
    label="COM_SERVIN2_FORM_LBL_CONSIGNACION_COMPRAS" 
    description="COM_SERVIN2_FORM_DESC_CONSIGNACION_COMPRAS" 
    type="sql" input_type="list" 
    query="select '' as id, 'Selecciona una opción' as descripcion union SELECT c.id, concat(c.cantidad,' | ' ,p.descripcion,' | ' ,c.total) as descripcion FROM #__servin_piezas2 as p inner join #__servin_compras2 as c on c.pieza = p.id  
    where c.pagada=0 and c.state=1 and p.state = 1" 
    key_field="id" 
    value_field="descripcion" hide_trashed="1" default="0" showon="tipo_transaccion:0"/>
    <field name="ventas" class="inputbox"   label="COM_SERVIN2_FORM_LBL_CONSIGNACION_VENTAS" description="COM_SERVIN2_FORM_DESC_CONSIGNACION_VENTAS"  type="sql" input_type="list" 
    query="select '' as id, 'Selecciona una opción' as descripcion union SELECT v.id, concat(v.cantidad,' | ' ,p.descripcion,' | ' ,v.total) as descripcion FROM #__servin_piezas2 as p inner join #__servin_ventas2 as v on v.pieza = p.id  
    where v.pagada=0 and v.state=1 and p.state = 1"  key_field="id" value_field="descripcion" hide_trashed="1" default="0" showon="tipo_transaccion:1"/>
    <field name="total" readonly="true" filter="safehtml" step="0.01" type="number" label="COM_SERVIN2_FORM_LBL_CONSIGNACION_TOTAL" description="COM_SERVIN2_FORM_DESC_CONSIGNACION_TOTAL" hint="COM_SERVIN2_FORM_LBL_CONSIGNACION_TOTAL"/>
    <field name="abono" readonly="true" filter="safehtml" step="0.01" type="number" label="COM_SERVIN2_FORM_LBL_CONSIGNACION_ABONO" description="COM_SERVIN2_FORM_DESC_CONSIGNACION_ABONO" hint="COM_SERVIN2_FORM_LBL_CONSIGNACION_ABONO"/> 
    <field name="abo_dev" default="0" type="radio" class=" btn-group btn-group-yesno btn-group-reversed abo_dev" label="COM_SERVIN2_FORM_LBL_CONSIGNACION_ABO_DEV" description="COM_SERVIN2_FORM_DESC_CONSIGNACION_ABO_DEV" hint="COM_SERVIN2_FORM_LBL_CONSIGNACION_ABO_DEV" >
      <option value="0">COM_SERVIN2_CONSIGNACIONES_ABO_DEV_OPTION_0</option>
      <option value="1">COM_SERVIN2_CONSIGNACIONES_ABO_DEV_OPTION_1</option>
    </field>
    <field name="devoluciones" 
    type="sql" 
    label="COM_SERVIN2_FORM_LBL_CONSIGNACION_DEVOLUCIONES" description="COM_SERVIN2_FORM_DESC_CONSIGNACION_DEVOLUCIONES" class="inputbox" input_type="list" 
    query="select '' as id, 'Selecciona una opción' as descripcion union 
    SELECT id , concat(no_folio_pagare,' | $' ,abono) as descripcion
    FROM #__servin_consignaciones2 
    WHERE estatus=2 
    and state = 1" key_field="id" 
    value_field="descripcion" default="0" showon="abo_dev:1"/>
    <field name="adeudo" readonly="true" filter="safehtml" step="0.01" type="number" label="COM_SERVIN2_FORM_LBL_CONSIGNACION_ADEUDO" description="COM_SERVIN2_FORM_DESC_CONSIGNACION_ADEUDO" hint="COM_SERVIN2_FORM_LBL_CONSIGNACION_ADEUDO"/>
    <field name="fecha_emision" class="inputbox" timeformat="12" filter="user_utc" translateformat="false" showtime="true" singleheader="false" todaybutton="true" weeknumbers="false" filltable="false" type="calendar" label="COM_SERVIN2_FORM_LBL_CONSIGNACION_FECHA_EMISION" description="COM_SERVIN2_FORM_DESC_CONSIGNACION_FECHA_EMISION" hint="COM_SERVIN2_FORM_LBL_CONSIGNACION_FECHA_EMISION"/>
    <field name="fecha_limite" class="inputbox" timeformat="12" filter="user_utc" translateformat="false" showtime="true" singleheader="false" todaybutton="true" weeknumbers="false" filltable="false" type="calendar" required="true" label="COM_SERVIN2_FORM_LBL_CONSIGNACION_FECHA_LIMITE" description="COM_SERVIN2_FORM_DESC_CONSIGNACION_FECHA_LIMITE" hint="COM_SERVIN2_FORM_LBL_CONSIGNACION_FECHA_LIMITE"/>
    <field name="devolucion" default="1" type="checkbox" label="COM_SERVIN2_FORM_LBL_CONSIGNACION_DEVOLUCION" description="COM_SERVIN2_FORM_DESC_CONSIGNACION_DEVOLUCION" hint="COM_SERVIN2_FORM_LBL_CONSIGNACION_DEVOLUCION"/>
    <field name="fecha_devolucion" class="inputbox" timeformat="12" filter="user_utc" translateformat="false" showtime="true" singleheader="false" todaybutton="true" weeknumbers="false" filltable="false" type="calendar" label="COM_SERVIN2_FORM_LBL_CONSIGNACION_FECHA_DEVOLUCION" description="COM_SERVIN2_FORM_DESC_CONSIGNACION_FECHA_DEVOLUCION" hint="COM_SERVIN2_FORM_LBL_CONSIGNACION_FECHA_DEVOLUCION" showon="devolucion:1"/>
    <field name="estatus" default="1" type="radio" readonly="true" label="COM_SERVIN2_FORM_LBL_CONSIGNACION_ESTATUS" 
      class="btn-group btn-group-yesno btn-group-reversed" description="COM_SERVIN2_FORM_DESC_CONSIGNACION_ESTATUS" hint="COM_SERVIN2_FORM_LBL_CONSIGNACION_ESTATUS">
      <option value="1">COM_SERVIN2_CONSIGNACIONES_ESTATUS_OPTION_1</option>
      <option value="2">COM_SERVIN2_CONSIGNACIONES_ESTATUS_OPTION_2</option>
      <option value="3">COM_SERVIN2_CONSIGNACIONES_ESTATUS_OPTION_3</option>
      <option value="4">COM_SERVIN2_CONSIGNACIONES_ESTATUS_OPTION_4</option>
    </field>
    <field name="version_note" type="text" label="JGLOBAL_FIELD_VERSION_NOTE_LABEL" description="JGLOBAL_FIELD_VERSION_NOTE_DESC" class="inputbox" size="45" labelclass="control-label"/>
  </fieldset>
</form>
